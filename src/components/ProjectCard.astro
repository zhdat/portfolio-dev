---
// Ici, on définit les données que le composant attend (les "Props")
interface Props {
  title: string
  description: string
  tags: string[]
  link: string
}

const { title, description, tags, link } = Astro.props
---

<a
  href={link}
  target="_blank"
  class="group block p-6 border border-gray-200 rounded-lg hover:border-gray-400 hover:shadow-sm transition-all bg-white"
>
  <div class="flex flex-col h-full justify-between">
    <div>
      <h3 class="text-xl font-bold text-gray-900 group-hover:text-blue-600 transition-colors">
        {title} ↗
      </h3>
      <p class="mt-3 text-gray-600 leading-relaxed">
        {description}
      </p>
    </div>

    <div class="mt-6 flex flex-wrap gap-2">
      {
        tags.map((tag) => (
          <span class="px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded-md border border-gray-200">
            {tag}
          </span>
        ))
      }
    </div>
  </div>
</a>
